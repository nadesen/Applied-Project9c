<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @group.image.attached? %>
                <%= image_tag @group.image.variant(resize_to_limit: [100,100]), size:'100x100' %>
              <% else %>
                <%= image_tag 'no_image.jpg', size:'100x100' %>
              <% end %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.all_members.each do |member| %>
                <div><%= member.name %></div>
              <% end %>
            </td>
            <td>
              <% if @group.owner == current_user %>
                <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              <% else %>
                <% if @group.all_members.include?(current_user) %>
                  <%= button_to 'Leave this group', leave_group_path(@group), method: :delete, class: "btn btn-danger" %>
                <% else %>
                  <%= button_to 'Join this group', join_group_path(@group), method: :post, class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if @group.owner == current_user %>
                <%= link_to "Notice an Event", notice_event_group_path(@group), class: "btn btn-warning" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>